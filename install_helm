wget https://storage.googleapis.com/kubernetes-helm/helm-v2.6.2-linux-amd64.tar.gz
tar zxfv helm-v2.6.2-linux-amd64.tar.gz cp linux-amd64/helm .
cd linux-amd64/helm
cp helm /usr/local/bin
helm init

